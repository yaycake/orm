/* menu_dropdown.wxss */

.menuDropdown{
  height:45vh;
  background-color:#739D8B;
  width:100%;
  position:absolute;
  display:flex;
  flex-direction:column;
  padding:1rem;
  z-index: 10;
  font-size:32rpx;
  color:white;
  top:3rem;
  box-sizing:border-box;
/* 
  border-bottom-left-radius:50%;
  border-bottom-right-radius:50%; */

}
.menuCurve{
  width: 100%;
  height: 100px;
  position: absolute;
  bottom: -1rem;
  right: 0;
  left: 0;
  z-index: 11;
}

.languagePicker {
  margin-bottom: 32rpx;
}

.menuLinks{
  margin-top: 1rem;
  display: flex;
  flex-direction: column;
  margin-left: 1rem;
}

.menuLinks > text {
  margin-bottom: 1rem;
}