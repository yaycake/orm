/* menu_dropdown.wxss */

.menuDropdown{
  height:45vh;
  background-color:#739D8B;
  width:100%;
  position:absolute;
  display:flex;
  flex-direction:column;
  padding:1rem;
  font-size:32rpx;
  color:white;
  top:4rem;
  box-sizing:border-box;

}
.menuCurve{
  width: 100%;
  height: 100px;
  position: absolute;
  bottom: -1rem;
  right: 0;
  left: 0;
  z-index: 2;
}

.languagePicker {
  margin-bottom: 32rpx;
}

.menuLinks{
  display: flex;
  flex-direction: column;
}

.menuLinks > text {
  margin-bottom: 1rem;
}